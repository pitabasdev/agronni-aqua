      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script
      src="https://kit.fontawesome.com/fc33bdc8f2.js"
      crossorigin="anonymous"
    ></script>

    <title>Aquaponics</title>
    <style>
      * {
        font-family: "Poppins";
      }
      .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0 4px 8px 0 rgba(52, 70, 41, 0.712);
        transition: 0.3s;
      }

      /* On mouse-over, add a deeper shadow */
      .card:hover {
        box-shadow: 0 8px 16px 0 rgba(9, 184, 9, 0.767);
      }
    </style>
    <style>
      body {
        min-height: 100vh;
        margin: 0;
        display: flex;
        flex-direction: column;
      }

      .container-fluid {
        flex: 1;
      }

      footer {
        /* Sticky footer styles */
        position: sticky;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.05);
        width: 100%;
      }
    </style>
  </head>
  <body ng-app="myapp" ng-controller="myctrl">
    <!-- modal -->
    <div
      class="modal fade"
      id="myModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Message ‚úâ</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body text-center">
            <h5 class="h5">
              {{ message }}
            </h5>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- modal -->

    <nav class="navbar navbar-expand-lg navbar-dark bg-success p-2">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">AQUA</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mb-2 mb-lg-0 ms-auto">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/home"
                >Home üè†</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/camera"
                >Camera</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/logout"
                >Logout</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-9">
          <div class="row">
            <div class="col">
              <div
                class="card mt-4 border border-dark"
                data-aos="zoom-out"
                data-aos-delay="600"
              >
                <div class="card-body">
                  <h3 class="card-title">Change Aqua Settings ‚öô</h3>
                  <sub class="text-muted">Aqua Unique Id: - <%= id %></sub>
                  <div class="mb-3">
                    <label class="form-label">Reference Temperature</label>
                    <input
                      class="form-control"
                      type="number"
                      placeholder="Enter Temprature "
                      ng-model="temp"
                      max="100"
                    />
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Reference Water Level</label>
                    <input
                      class="form-control"
                      type="number"
                      placeholder="Enter Water Level"
                      ng-model="humidity"
                      max="100"
                    />
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Reference Turbidity</label>
                    <input
                      class="form-control"
                      type="number"
                      placeholder="Enter Turbidity "
                      ng-model="moisture"
                      max="100"
                    />
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Reference Water PH</label>
                    <input
                      class="form-control"
                      type="number"
                      placeholder="Enter PH "
                      ng-model="moisture"
                      max="100"
                    />
                  </div>
                  <div class="mb-3">
                    <label class="form-label"
                      >Reference DO(Dissolve Oxygen)</label
                    >
                    <input
                      class="form-control"
                      type="number"
                      placeholder="Enter Water DO "
                      ng-model="moisture"
                      max="100"
                    />
                  </div>

                  <button
                    class="btn btn-outline-success"
                    ng-click="updateall();"
                  >
                    Update
                  </button>
                </div>
              </div>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-sm-3">
              <div class="row">
                <div class="col-sm-12">
                  <div
                    class="card mt-2"
                    data-aos="fade-right"
                    data-aos-delay="500"
                  >
                    <div class="card-body">
                      <h4 class="h4" ng-init="getrefvalues();">
                        Reference Data.
                      </h4>
                      <table class="table">
                        <tbody>
                          <tr>
                            <th scope="row">Temp üí®</th>
                            <td>{{ refvalues.re_temp }}<sub>degree</sub></td>
                          </tr>
                          <tr>
                            <th scope="row">Waterlevel üíß</th>
                            <td>
                              {{ refvalues.re_humidity }} <sub>Percent</sub>
                            </td>
                          </tr>
                          <tr>
                            <th scope="row">Turbidity ‚ùÑ</th>
                            <td>
                              {{ refvalues.re_soilmoisture }} <sub>percent</sub>
                            </td>
                          </tr>
                          <tr>
                            <th scope="row">Water Flow ‚ùÑ</th>
                            <td>
                              {{ refvalues.re_soilmoisture }} <sub>percent</sub>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-sm-9">
              <div class="card mt-2" data-aos="fade-left" data-aos-delay="500">
                <div class="card-body" ng-init="getallcurvalue();">
                  <h3 class="h3">
                    Current Values
                    <button
                      class="btn btn-outline-success text-end"
                      ng-click="toggleTable('sensor')"
                    >
                      Sensor Values‚¨á
                    </button>
                    <button
                      class="btn btn-outline-success text-end"
                      ng-click="getrestData(); toggleTable('npk')"
                    >
                      Rest Sensor Values‚¨á
                    </button>
                    <a
                      class="btn btn-outline-success text-end"
                      href="/download/<%= id %>"
                    >
                      <i class="fa-solid fa-download"></i>‚¨á
                    </a>
                    <br />
                  </h3>
                  <sub class="text-muted mx-2">
                    Reloaded In Every 20 Seconds
                    <i class="fas fa-spinner fa-spin"></i>
                  </sub>

                  <div class="table-responsive">
                    <!-- Sensor Values Table -->
                    <table class="table" ng-show="showSensorTable">
                      <thead>
                        <tr>
                          <th scope="col">Temp</th>
                          <th scope="col">Water Level</th>
                          <th scope="col">Turbidity</th>
                          <th scope="col">Water Flow</th>
                          <th scope="col">TimeStamp</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr
                          ng-repeat="data in responsefromapi | orderBy: '-date'"
                        >
                          <td>{{ data.temp }}</td>
                          <td>{{ data.waterlevel }}</td>
                          <td>{{ data.turbidity }}</td>
                          <td>{{ data.flow }}</td>
                          <td>{{ data.date | date: "dd/MM/yyyy h:m:ss a" }}</td>
                        </tr>
                      </tbody>
                    </table>

                    <!-- Rest Sensor Values Table (NPK) -->
                    <table class="table" ng-show="showNPKTable">
                      <thead>
                        <tr>
                          <th scope="col">PH</th>
                          <th scope="col">DO</th>
                          <th scope="col">TimeStamp</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr
                          ng-repeat="data in responsefromapip | orderBy: '-date'"
                        >
                          <td>{{ data.ph }}</td>
                          <td>{{ data.do }}</td>
                          <td>{{ data.date | date: "dd/MM/yyyy h:m:ss a" }}</td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="row">
            <img
              src="/img/Organic  Farming.svg"
              class="img-fluid"
              alt=""
              srcset=""
            />
          </div>
          <div class="row">
            <img
              src="/img/undraw_Designer_by46.svg"
              class="img-fluid"
              alt=""
              srcset=""
            />
          </div>
        </div>
      </div>
    </div>
    <footer class="bg-body-tertiary text-center mt-4">
      <div class="container p-4 pb-0">
        <section class="mb-4">
          <a
            data-mdb-ripple-init
            class="btn text-white btn-floating m-1"
            style="background-color: #3b5998"
            href="/aboutus"
            role="button"
            ><i class="fa-solid fa-address-card"></i
          ></a>
          <a
            data-mdb-ripple-init
            class="btn text-white btn-floating m-1"
            style="background-color: #ac2bac"
            href="#!"
            role="button"
            ><i class="fab fa-instagram"></i
          ></a>
          <a
            data-mdb-ripple-init
            class="btn text-white btn-floating m-1"
            style="background-color: #0082ca"
            href="https://www.linkedin.com/in/pitabas-pradhan-606aa3201/"
            role="button"
            ><i class="fab fa-linkedin-in"></i
          ></a>
          <a
            data-mdb-ripple-init
            class="btn text-white btn-floating m-1"
            style="background-color: #333333"
            href="https://github.com/pitabasdev"
